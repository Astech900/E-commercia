<% layout("./layout/mainBoylerplate") -%>
    <style>
        .dashboard-card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .order-item {
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 0;
        }

        .order-item:last-child {
            border-bottom: none;
        }

        .product-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 0.375rem;
        }

        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .stats-card-2 {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }
    </style>
    </head>

    <body>
        <div class="container-fluid py-4">
            <!-- Dashboard Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <h2 class="fw-bold mb-3">
                        <i class="fas fa-tachometer-alt me-2"></i>Order Dashboard
                    </h2>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card dashboard-card stats-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title mb-1">My Orders</h5>
                                    <h2 class="mb-0">12</h2>
                                    <small class="opacity-75">Total orders placed</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shopping-bag fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card dashboard-card stats-card-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title mb-1">Orders Received</h5>
                                    <h2 class="mb-0">8</h2>
                                    <small class="opacity-75">Orders on my products</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-store fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Dashboard Content -->
            <div class="row">
                <!-- My Orders Section -->
                <div class="col-lg-6 mb-4">
                    <div class="card dashboard-card h-100">
                        <div
                            class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-shopping-cart me-2"></i>My Orders
                            </h5>

                        </div>
                        <div class="card-body p-0" style="max-height: 500px; overflow-y: auto;">
                            <% if (myOrder && myOrder.length> 0) { %>
                                <% for (let data of myOrder) { %>
                                    <div class="order-item px-3">
                                        <div class="d-flex align-items-center">
                                            <img src="<%= data.ordered_prodcut.product_image[0].url %>" alt="Product"
                                                class="product-image me-3">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <%= data.ordered_prodcut.product_name %>
                                                </h6>
                                                <small class="text-muted">Order #ORD-001</small>
                                                <div class="mt-1">
                                                    <span class="badge bg-warning status-badge">Processing</span>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <strong class="d-block">$<%= data.ordered_prodcut.product_price %>
                                                </strong>
                                                <small class="text-muted">
                                                    <%= new Date(data.placed_date).toLocaleString("en-US", {
                                                        month: "short" , day: "numeric" , year: "numeric" ,
                                                        hour: "2-digit" , minute: "2-digit" }) %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } else { %>
                                            <p class="text-muted">No orders found.</p>
                                            <% } %>


                        </div>
                        
                    </div>
                </div>

                <!-- Orders Received Section -->
                <div class="col-lg-6 mb-4">
                    <div class="card dashboard-card h-100">
                        <div
                            class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-inbox me-2"></i>Orders Received
                            </h5>

                        </div>
                        <div class="card-body p-0" style="max-height: 500px; overflow-y: auto;">

                            <% if (recievedOrder && recievedOrder.length> 0) { %>

                                <% for (let data of recievedOrder) { %>
                                    <div class="order-item px-3">
                                        <div class="d-flex align-items-center">
                                            <img src="<%= data.ordered_prodcut.product_image[0].url %>" alt="My Product"
                                                class="product-image me-3">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <%= data.ordered_prodcut.product_name %>
                                                </h6>
                                                <small class="text-muted">Ordered by: <%= data.order_by.username %>
                                                </small>
                                                <div class="mt-1">
                                                    <span class="badge bg-primary status-badge">New Order</span>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <strong class="d-block">$<%= data.ordered_prodcut.product_price %>
                                                </strong>
                                                <small class="text-muted">
                                                    <%= new Date(data.placed_date).toLocaleString("en-US", {
                                                        month: "short" , day: "numeric" , year: "numeric" ,
                                                        hour: "2-digit" , minute: "2-digit" }) %>
                                                </small>

                                                <div class="mt-1">
                                                    <button class="btn btn-sm btn-outline-success me-1">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } else { %>
                                            <p class="text-muted">No orders found.</p>
                                            <% } %>
                        </div>
                       
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-12">
                    <div class="card dashboard-card">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <button class="btn btn-outline-primary w-100">
                                        <i class="fas fa-plus-circle me-2"></i>Add New Product
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-outline-info w-100">
                                        <i class="fas fa-chart-line me-2"></i>View Analytics
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-outline-warning w-100">
                                        <i class="fas fa-cog me-2"></i>Settings
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-outline-danger w-100">
                                        <i class="fas fa-life-ring me-2"></i>Support
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>